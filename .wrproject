default = "dev"

[crates.dev]
  image = "wharfr/dev:1.16.3b"
  mount-home = true
  project-mount = "/go/src/wharfr.at/wharfrat"
  working-dir = "project, match"
  env-blacklist = ["GOPATH"]
  shell = "/bin/sh"
  export-bin = [
    "/usr/local/go/bin/*",
    "/go/bin/*",
  ]
  setup-post = """
    mkdir -p /go/bin /go/pkg
    chown -R "${WR_EXT_USER}:${WR_EXT_GROUP}" /go/bin /go/pkg
  """

[crates.dev.cmd-replace.go]
  match = "/usr/local/go"
  replace = "${WHARFRAT_PROJECT_DIR}/.wrenv"

[crates.docs]
  image = "wharfr/docs"
  mount-home = false
  project-mount = "/wharfrat"
  working-dir = "project, match"

[crates.rpm]
  image = "wharfr/rpm"
  mount-home = false
  project-mount = "/wharfrat"
  working-dir = "project, match"

[crates.deb]
  image = "wharfr/deb:1.0"
  mount-home = false
  project-mount = "/wharfrat"
  working-dir = "project, match"
  cap-add = ["SYS_PTRACE"]
